<Page::Header @title={{@title}} @icon={{@icon}}>
  <:breadcrumbs>
    {{#if @breadcrumbs}}
      <Page::Breadcrumbs @breadcrumbs={{@breadcrumbs}} />
    {{/if}}
  </:breadcrumbs>
  <:badges>
    {{#if this.flags.isHvdManaged}}
      <Hds::Badge @text="Plus feature" @color="highlight" @size="large" data-test-badge="Plus feature" />
    {{/if}}
  </:badges>
</Page::Header>