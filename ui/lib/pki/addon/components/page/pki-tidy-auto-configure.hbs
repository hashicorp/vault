<PkiTidyForm
  @form={{@form}}
  @tidyType="auto"
  @onSave={{transition-to "vault.cluster.secrets.backend.pki.tidy.auto"}}
  @onCancel={{transition-to (concat "vault.cluster.secrets.backend.pki.tidy" (if @form.data.enabled ".auto" ""))}}
/>