<Hds::PageHeader class="page-header" as |PH|>
  <PH.Title>{{@title}}</PH.Title>
  {{#if (has-block "breadcrumbs")}}
    <PH.Breadcrumb>
      {{yield to="breadcrumbs"}}
    </PH.Breadcrumb>
  {{/if}}
  {{#if @icon}}
    <PH.IconTile @icon={{@icon}} />
  {{/if}}
  {{#if (has-block "badges")}}
    <PH.Badges>
      {{yield to="badges"}}
    </PH.Badges>
  {{/if}}
  {{#if (has-block "subtitle")}}
    <PH.Subtitle>{{yield to="subtitle"}}</PH.Subtitle>
  {{else if @subtitle}}
    <PH.Subtitle>{{@subtitle}}</PH.Subtitle>
  {{/if}}
  {{#if (has-block "description")}}
    <PH.Description>{{yield to="description"}}</PH.Description>
  {{else if @description}}
    <PH.Description>{{@description}}</PH.Description>
  {{/if}}
  {{#if (has-block "actions")}}
    <PH.Actions>{{yield to="actions"}}</PH.Actions>
  {{/if}}
</Hds::PageHeader>