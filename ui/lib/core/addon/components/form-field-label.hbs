{{#if @label}}
  <label data-test-form-field-label class="is-label" ...attributes>
    {{@label}}
    {{#if @helpText}}
      <InfoTooltip>
        <span data-test-help-text>{{@helpText}}</span>
      </InfoTooltip>
    {{/if}}
  </label>
{{/if}}
{{#if @subText}}
  <p class="sub-text" data-test-label-subtext>
    {{@subText}}
    {{#if @docLink}}
      <DocLink @path={{@docLink}}>
        See our documentation
      </DocLink>
      for help.
    {{/if}}
  </p>
{{/if}}