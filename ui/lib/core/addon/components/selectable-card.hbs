<Hds::Card::Container
  tabindex={{unless @disabled "0"}}
  class="selectable-card {{if @disabled 'disabled'}}"
  @level={{if @disabled "base" "mid"}}
  @hasBorder={{true}}
  {{on "click" (if @disabled (noop) @onClick)}}
  {{on "keypress" (if @disabled (noop) @onClick)}}
  ...attributes
>
  {{yield}}
</Hds::Card::Container>