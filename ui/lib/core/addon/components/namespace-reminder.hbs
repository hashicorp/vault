{{#if this.showMessage}}
  {{#if (has-block)}}
    <p class="namespace-reminder" id="namespace-reminder">
      {{yield (hash namespace=this.namespace)}}
    </p>
  {{else}}
    <p class="namespace-reminder" id="namespace-reminder">
      This
      {{@noun}}
      will be
      {{this.modeVerb}}
      in the
      <Hds::Badge @text="{{this.namespace.path}}/" />
      namespace.
    </p>
  {{/if}}
{{/if}}