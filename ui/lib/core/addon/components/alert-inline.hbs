<Hds::Alert
  {{did-update this.refresh @message}}
  @type="compact"
  @color={{this.color}}
  @icon={{if this.isRefreshing "loading"}}
  data-test-inline-alert
  ...attributes
  as |A|
>
  {{#unless this.isRefreshing}}
    <A.Description data-test-inline-error-message>{{@message}}</A.Description>
  {{/unless}}
</Hds::Alert>