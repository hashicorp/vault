<PageHeader as |p|>
  <p.top>
    {{key-value-header
      baseKey=model
      path="vault.cluster.access.method"
      root=root
      showCurrent=true
    }}
  </p.top>
  <p.levelLeft>
    <h1 class="title is-3">
      {{capitalize model.methodType}}
    </h1>
  </p.levelLeft>
</PageHeader>

{{section-tabs model 'authShow'}}

{{#if (eq section "configuration")}}
  <Toolbar>
    <ToolbarActions>
        <ToolbarButton
          @params={{array "vault.cluster.settings.auth.configure" model.id}}
          data-test-configure-link=true
        >
          Configure
        </ToolbarButton>
    </ToolbarActions>
  </Toolbar>
{{/if}}

{{component (concat "auth-method/" section) model=model}}
