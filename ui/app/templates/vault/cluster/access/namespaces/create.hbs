{{#if (has-feature "Namespaces")}}
  <Page::Header @title="Create a Namespace">
    <:breadcrumbs>
      <Page::Breadcrumbs
        @breadcrumbs={{array (hash label="Namespaces" route="vault.cluster.access.namespaces.index") (hash label="Create")}}
      />
    </:breadcrumbs>
  </Page::Header>
  <EditForm
    @model={{this.model}}
    @onSave={{action "onSave"}}
    @cancelLinkParams={{array "vault.cluster.access.namespaces.index"}}
  />
{{else}}
  <UpgradePage @title="Namespaces" @minimumEdition="Vault Enterprise Pro" />
{{/if}}