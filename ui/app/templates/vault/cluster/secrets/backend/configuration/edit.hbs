<PageHeader as |p|>
  <p.top>
    <KeyValueHeader
      @baseKey={{this.model}}
      @path="vault.cluster.secrets.backend"
      @root={{this.root}}
      @showCurrent={{true}}
    />
  </p.top>
  <p.levelLeft>
    <h1 class="title is-3" data-test-backend-configure-title={{this.model.type}}>
      Configure
      {{this.model.displayName}}
    </h1>
  </p.levelLeft>
</PageHeader>

<Toolbar>
  <ToolbarActions>
    <ToolbarLink @route="vault.cluster.secrets.backend" @model={{this.model.id}} data-test-backend-view-link>
      View backend
    </ToolbarLink>
  </ToolbarActions>
</Toolbar>

<SecretEngine::ConfigureCreateEdit
  @backendPath={{this.model.id}}
  @displayName={{this.model.displayName}}
  @type={{this.model.type}}
  @model={{this.model.first-model}}
  @secondModel={{this.model.second-model}}
  @issuerConfig={{this.model.identity-oidc-config}}
/>