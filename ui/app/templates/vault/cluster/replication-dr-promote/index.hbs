<section class="section">
  <div class="container is-widescreen">
    <ReplicationPage @model={{this.model}} as |Page|>
      <Page.header @showTabs={{true}} />
      {{#if Page.isDisabled}}
        <Hds::ApplicationState @align="center" class="top-padding-32" as |A|>
          <A.Header
            @title="Disaster Recovery secondary not set up"
            @titleTag="h2"
            @icon="alert-circle"
            class="align-items-end"
          />
          <A.Body @text={{Page.message}} />
          <A.Footer as |F|>
            <F.LinkStandalone @icon="chevron-left" @text="Go back" @route="vault.cluster.secrets.backends" />
            <F.LinkStandalone
              @icon="learn-link"
              @iconPosition="trailing"
              @color="secondary"
              @text="Disaster recovery tutorial"
              @href={{doc-link "/vault/tutorials/enterprise/disaster-recovery"}}
            />
          </A.Footer>
        </Hds::ApplicationState>
      {{else}}
        <section>
          <ReplicationActions @replicationMode="dr" @model={{this.model}} @onPromote={{action "onPromote"}} />
        </section>
      {{/if}}
    </ReplicationPage>
  </div>
</section>