<div class="console-ui-output">
  <pre>{{@content}}</pre>
  <Hds::Copy::Button
    @text="Copy"
    @isIconOnly={{true}}
    @textToCopy={{@content}}
    @onError={{(fn
      (set-flash-message "Clipboard copy failed. Please make sure the browser Clipboard API is allowed." "danger")
    )}}
    class="transparent icon-grey-500 top-right-absolute"
  />
</div>